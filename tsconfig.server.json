{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./client/src/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@assets/*": [
                "./attached_assets/*"
            ]
        }
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ]
}